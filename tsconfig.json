{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "rootDir": "src",
      "outDir": "dist/js",
      "noEmitOnError": true,
      "typeRoots": ["node_modules/@types"],
      "types": ["chrome"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}